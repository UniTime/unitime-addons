<hibernate-configuration>
	<session-factory>

		<property name="show_sql">false</property>
		
		<!-- Banner Specific Event Listeners -->
		<event type="post-update">
			<listener class="org.unitime.banner.commons.hibernate.util.BannerUpdateListener"/>
		</event>

		<!-- End of Banner Specific Event Listeners -->
		
		<!-- Custom hbm.xml files -->
		<mapping resource="BannerSession.hbm.xml" />
		<mapping resource="BannerCourse.hbm.xml" />
		<mapping resource="BannerConfig.hbm.xml" />
		<mapping resource="BannerSection.hbm.xml" />
		<mapping resource="BannerSectionToClass.hbm.xml" />
		<mapping resource="Queue.hbm.xml" />
		<mapping resource="QueueError.hbm.xml" />
		<mapping resource="BannerResponse.hbm.xml" />
		<mapping resource="BannerTermCrnProperties.hbm.xml" />
		
		<!-- End of custom hbm.xml files -->
	</session-factory>
</hibernate-configuration>
