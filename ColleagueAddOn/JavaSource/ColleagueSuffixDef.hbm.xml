<hibernate-mapping package="org.unitime.colleague.model">
	<class
		name="ColleagueSuffixDef"
		table="colleague_course_suffix_def">

 		<cache include="non-lazy" usage="read-write"/>
 		
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>
        
  		<properties name="uniqueCourseSuffix" unique="true">
      		<property 
				name="termCode" 
				column="term_code"
				type="java.lang.String"
				not-null="true"
				length="20"
			/>
			
			<property
				name="itypeId"
				column="itype_id"
				type="java.lang.Integer"
				not-null="false"
				length="2"
			/>
			
			<property
				name="subjectAreaId"
				column="subject_area_id"
				type="java.lang.Long"
				not-null="false"
			/>

			<property
				name="courseSuffix"
				column="course_suffix"
				type="java.lang.String"
				not-null="false"
				length="5"
			/>
		</properties>
		
		<property
			name="campusCode"
			column="campus_code"
			type="java.lang.String"
			not-null="false"
			length="20"
		/>

		<property
			name="minSectionNum"
			column="min_section_num"
			type="java.lang.Integer"
			length="2"
			not-null="true"
		/>

		<property
			name="maxSectionNum"
			column="max_section_num"
			type="java.lang.Integer"
			length="2"
			not-null="true"
		/>
		
		<property
			name="itypePrefix"
			column="itype_prefix"
			type="java.lang.String"
			not-null="false"
			length="1"
		/>
		<property
			name="prefix"
			column="prefix"
			type="java.lang.String"
			not-null="false"
			length="1"
		/>
		
		<property
			name="suffix"
			column="suffix"
			type="java.lang.String"
			not-null="false"
			length="1"
		/>
		<property
			name="note"
			column="note"
			type="java.lang.String"
			not-null="false"
			length="500"
		/>
		
	</class>

</hibernate-mapping>