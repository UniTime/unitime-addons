<hibernate-mapping package="org.unitime.colleague.model">
	<class
		name="ColleagueRestriction"
		table="colleague_restriction">

 		<cache include="non-lazy" usage="read-write"/>
 		
        <id
            name="uniqueId"
            column="UNIQUEID"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>
		
  		<properties name="uniqueCode" unique="true">
      		<property 
				name="termCode" 
				column="term_code"
				type="java.lang.String"
				not-null="true"
				length="20"
			/>
			
			<property
				name="code"
				column="code"
				type="java.lang.String"
				not-null="true"
				length="8"
			/>
		</properties>

		<property
			name="name"
			column="name"
			type="java.lang.String"
			not-null="true"
			length="30"
		/>

		<property
			name="description"
			column="description"
			type="java.lang.String"
			length="500"
			not-null="false"
		/>
		
				
	</class>

</hibernate-mapping>