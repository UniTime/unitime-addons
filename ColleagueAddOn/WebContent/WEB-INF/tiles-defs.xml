  	</definition>
  	<definition	name="colleagueOfferingDetailTile" extends="pageLayoutDef">
		<put name="title" type="string" value="Colleague Offering Detail"/>
		<put name="body" value="/colleague/colleagueOfferingDetail.jsp" />
  	</definition>
   	<definition	name="sectionRestrictionAssignmentTile" extends="pageLayoutDef">
		<put name="title" type="string" value="Section Restrictions"/>
		<put name="body" value="/colleague/sectionRestrictionAssignment.jsp" />
		<put name="showNavigation" value="true" />
		<put name="showSolverWarnings" value="assignment" />
  	</definition>

	<!-- End of custom tiles definitions -->

