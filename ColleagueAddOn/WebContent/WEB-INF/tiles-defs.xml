<tiles-definitions>
	
	<!-- Custom tiles definitions -->
   	<definition	name="colleagueMessageResponsesTile" extends="pageLayoutDef">
		<put name="title" type="string" value="Colleague Message Responses"/>
		<put name="body" value="/colleague/colleagueMessageResponses.jsp" />
  	</definition>
  	<definition	name="colleagueOfferingSearchTile" extends="pageLayoutDef">
		<put name="title" type="string" value="Colleague Offerings"/>
		<put name="body" value="/colleague/colleagueOfferingSearch.jsp" />
		<put name="action" value="colleagueOfferingSearch" />
		<put name="showNavigation" value="true" />
