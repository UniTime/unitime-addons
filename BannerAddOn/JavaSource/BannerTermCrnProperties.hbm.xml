<hibernate-mapping package="org.unitime.banner.model">
	<class
		name="BannerTermCrnProperties"
		table="banner_crn_provider">

 		<cache include="non-lazy" usage="read-write"/>
 		
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long"
        >
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>
        		
		<property
			name="bannerTermCode"
			column="term_code"
			type="java.lang.String"
			not-null="true"
			length="20"
		/>

		<property
			name="lastCrn"
			column="last_crn"
			type="java.lang.Integer"
			not-null="true"
		/>
		
		<property
			name="searchFlag"
			column="search_flag"
			type="java.lang.Boolean"
			not-null="true"
		/>

		<property
			name="minCrn"
			column="min_crn"
			type="java.lang.Integer"
			not-null="true"
		/>
		
		<property
			name="maxCrn"
			column="max_crn"
			type="java.lang.Integer"
			not-null="true"
		/>
		
        <set
            name="bannerSessions"
            inverse="true"
            lazy="true"
            cascade="none"
            table="banner_session"
            order-by="uniqueid">

            <cache include="non-lazy" usage="transactional"/>
            <key column="banner_term_crn_prop_id"/>
            <one-to-many class="BannerSession"/>
        </set>
				
	</class>

</hibernate-mapping>
